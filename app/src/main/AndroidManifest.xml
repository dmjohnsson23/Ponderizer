<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.danmercer.ponderizer">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Look up scriptures by reference TODO: Remove AddScriptureReference? -->
        <activity
            android:name=".AddScriptureReferenceActivity"
            android:parentActivityName=".MainActivity" />

        <!-- "Share" text from other apps (i.e. Gospel Library) and add as scripture -->
        <activity
            android:name=".AddScriptureTextActivity"
            android:label="Add Scripture to Ponderize"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="text/plain" />
            </intent-filter>
        </activity>

        <!-- Shows instructions for adding from Gospel Library -->
        <activity
            android:name=".AddScriptureInstructions"
            android:parentActivityName=".MainActivity"></activity>

        <!-- Displays the text of a scripture -->
        <activity
            android:name=".scriptureview.ScriptureViewActivity"
            android:parentActivityName=".MainActivity"></activity>

        <!-- Adds a note about a certain scripture -->
        <activity
            android:name=".scriptureview.AddNoteActivity"
            android:label="@string/title_activity_add_note"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
