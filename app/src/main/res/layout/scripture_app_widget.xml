<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/widget_background"
    android:orientation="vertical"
    android:padding="@dimen/widget_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/colorPrimary"
        android:padding="6dp">

        <TextView
            android:id="@+id/widget_header"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/action_add_note"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="Reference here lorem ipsum dolor"
            android:textAppearance="?android:textAppearanceMedium" />

        <ImageButton
            android:id="@+id/action_memorize"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="#00000000"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:src="@drawable/ic_school_white_24dp" />

        <ImageButton
            android:id="@+id/action_add_note"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/action_memorize"
            android:background="#00000000"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:src="@drawable/ic_note_add_white_24dp" />

    </RelativeLayout>


    <TextView
        android:id="@+id/widget_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:contentDescription="@string/appwidget_text"
        android:text="@string/appwidget_text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/white" />


</LinearLayout>